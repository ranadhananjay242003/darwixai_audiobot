# ── Environment Configuration ─────────────────────────────────────────────
# Copy this file to .env and adjust values for your deployment.

# Application
APP_NAME=Darwix AI
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Database (switch to PostgreSQL for production)
# SQLite (default):
DATABASE_URL=sqlite:///./darwix.db
# PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/darwix
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# File Storage
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
MAX_UPLOAD_SIZE_MB=50

# Speech-to-Text
STT_PROVIDER=whisper
WHISPER_MODEL_SIZE=base

# Text-to-Speech
TTS_PROVIDER=gtts

# Sentiment Analysis
SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english
SENTIMENT_ENABLED=true

# Coachable Moment Detection
COACHABLE_CONFIDENCE_THRESHOLD=0.5

# Celery (future)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
